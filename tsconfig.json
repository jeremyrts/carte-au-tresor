{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["esnext"],
    "module": "CommonJS",
    "rootDir": "src",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "exclude": [
    "src/**/*.spec.ts"
  ],
}
